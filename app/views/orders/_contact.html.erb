<style type="text/css">

</style>

<div class="modal fade" id="myModal" style="margin-top:40px">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">收货人信息</h4>
      </div>
             <%= form_for :user, url: user_path(current_user), remote: true, method: :patch, html: { class: "form-horizontal", id: "address-form" } do |f| %>
      <div class="modal-body"> 
              <div class="form-group">
                  <label class="col-sm-2 control-label">
                      邮箱：
                  </label>
                  <div class="input-group">
                      <p class="form-control-static">
                          <%= current_user.email %>
                      </p>
                  </div>
              </div>
              
              
              <div class="form-group">
                  <label class="col-sm-2 control-label">
                      姓名：
                  </label>
                  <div class="input-group">
                      <p class="form-control-static">
                          <%= current_user.name %>
                      </p>
                  </div>
              </div>
              

               <div class="form-group">
                  <label class="col-sm-2 control-label">
                      电话：
                  </label>
                  <div class="input-group">
                      <p class="form-control-static">
                        <%= f.text_field :phone, class: "form-control", placeholder:"请填写有效的电话", value: current_user.phone, :autofocus => true  %>
                      </p>
                  </div>
              </div> 
               <div class="form-group">
                  <label class="col-sm-2 control-label">
                    地址：
                  </label>
                  <div class="input-group">
                      <p class="form-control-static">
                         <%= f.text_area :address,  class: "form-control", rows: "3", cols: "50", placeholder:"请填写详细的收货地址", value: current_user.address %>
                      </p>
                  </div>
              </div>         
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" style="height:40px">取消</button>
              <%= f.submit "确  定", :id=>
            "update_contact", :class => "btn btn-primary", :style => "height:40px" %>
                  <% end %>
          </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->