<script type="text/javascript">

    $(document).ready(function() {

       $("#myModal").modal('show');

        var options = {
            dataType: 'html',
            success: function(data) {
                $("#illustration_view").html(data);
                $("#uploading").hide();
                $("#making").show();
                preview_products();
            }
        };

        $('#upload_pic').click(function() {
            $("#upload_form").ajaxForm(options).submit();  
            $("#pre").hide();
            $("#uploading").show();
            $("#myModal").modal('hide');
        });

        $('#myModal').on('hidden.bs.modal', function (e) {
       
        });

        $("input[type='file']").change(function(evt) {
            var files = evt.target.files;

            for (var i = 0,
            f; f = files[i]; i++) {

                if (!f.type.match('image.*')) {
                    continue;
                }

                var reader = new FileReader();

                reader.onload = (function(theFile) {
                    return function(e) {
                        $("#list img").attr("src", e.target.result); //预览图片的位置  
                        $("#pre").hide();               
                    };
                })(f);

                reader.readAsDataURL(f);
            }
        });

    });

    var preview_products = function() {
        var options = {
            target: '#products_view',
            url: '/products/preview',
            data: {ill_id:$("#ill_id").val()},
            success: function(data) {
                $("#making").hide();
                $("#products_view").html(data);
            }
        };

        $.ajax(options);

