                    <div>
                      <%= f.label :address do %>地址<% end %>
                      <%= f.text_area :address %>
                    </div><br />
                  </fieldset>

                <!-- 使用Option Tags from a Collection of Arbitrary Objects来自动生成options -->

                  <div>
                    <%= f.submit "更新", class: "btn btn-danger btn-lg update"%>
                  </div>
                  <% end %>
