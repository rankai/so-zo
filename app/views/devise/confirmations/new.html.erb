<script type="text/javascript">
  
  $(function() {
    $("#nav").css("background-image", 'none');
  });

</script>

<style type="text/css">
  
    .login-container {
      margin-left: 50%;
      margin-top: 50px;
      margin-bottom: 80px;
      height: 500px
    }

    .login-image {
      float: left
    }

    .login-form {
      min-width: 350px;
      max-width: 400px;
      padding: 25px;
      border: #eee solid 1px;
      float: left;
      margin-left: 100px
    }

    .login-form input[type='submit'] {
      height: 40px;
    }
</style>

<body id="top">
  <div class="contents">
      <%= render "home/nav2" %>
    <div style="height:76px">
    </div>

    <div class="login-container">

        <div class="login-form">
        <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name),  :html => { role: "form", :method => :post }) do |f| %>
          <%= devise_error_messages! %>

	      <div class="form-group">
            <%= f.label :email do %> <%= User.human_attribute_name('email') %> <% end %> <br />
            <%= f.email_field :email, :autofocus => true, placeholder: t('devise.placeholders.resend_email'), class: "form-control" %>
	      </div>

	      <div><%= f.submit t('devise.links.resend_confirmation'), class: "btn btn-warning" %></div>

        <% end %>



        <div style="height:30px">
        </div>

        <%= render "devise/shared/links" %>
      </div>
  </div>

      <div class="clear">
      </div>
      <div class="container">
         <%= render "home/bottom" %>
     </div>

</div>

</body>