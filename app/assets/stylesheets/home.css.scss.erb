@mixin siderbar-searchbox($height) {
  input {
    @if $height < 60px {
      height: $baseSearchBoxHeight;
      padding-top: 10px;
    } @else {
      height: $height;
    }
    @include naked-input;
    background-color: darken($baseNavBackgroundColor, 10%);
    padding-left: 50px;
  }
  i {
      position: absolute;
      top: 40%;
      left: 20px;
      color: gray;
      z-index: 1000;
  }
  .input-group {
    width: 100%;
  }
  
}


/* siderbar-bg => siderbar */
