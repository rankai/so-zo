/* ----------------------------------- header nav ------------------------------------ */

@mixin position-logo($type: big) {
	.navbar-brand img {
		position: absolute;
		top: 1px;
		@if $type == big {
			padding-left: 10px;
		} @else {
			height: 40px;
			padding-left: -10px;
		}
	}
}

@media screen and (max-width: 768px) {
	.navbar-nav {
		float: default;
	}
	.loginbar {
		padding-left: 0px;
	}
	@include position-logo(small);
}
@media screen and (min-width: 768px) {
	.navbar-nav {
		float: right;
	}
	.loginbar {
		padding-left: 30px;
	}
	.navbar-nav>li>a {
		height: 60px;
		line-height: 30px;
	}
	@include position-logo(big);
}

// overwrite bootstrap nav default
.navbar-tabs {
  margin-bottom: 0px;
  @include box-shadow(0 -1px 15px rgba(125,125,125,0.8));
  background-color: $baseNavBackgroundColor;
  border-top: $baseNavHeadLine;
  .navbar-nav {
  	.active {
  		a { 
			 &, &:hover, &:focus {
				background-color: $baseNavItemBackgroundColor;
			 	color: $baseFontColor;
			}
  		}
  	}
  	a {
  		color: #777;
  		&:hover, &:focus {
  		  color: #333; 
  		}
  	}
  }
  #example-navbar-collapse li {
  	margin-right: 20px;
  }
}

.loginbar {
  border-left: 1px solid black;
}

