// --------------------------------- publish upload modal ---------------------------- //

.publish-upload-modal-content {
	@extend .base-modal-content;
	padding: 10px;
	* {
 	 @include border-radius(0px);
	}
}


.publish-upload-modal-section-header{
    @extend .base-modal-section-header;
  }

.publish-upload-modal-header {
    @extend .base-modal-header;
}

.publish-upload-modal-body {
    @extend .base-modal-body;
}

.publish-upload-modal-foot {
    @extend .base-modal-foot;
}


.publish-upload-modal-type-btn {
    @extend .flat-button;
    width: 30%;
    background-color: $baseBackgroundColor;
    margin-right: 25px;
    &.active {
      border: 4px solid skyblue !important;
    }
    span {
      padding: 10px 0px;
      width: 100%;
      float: left;
      font-size: 16px;
      font-weight: bold;
    }
    img {
    }
}


.publish-upload-modal-file-btn {
	position: relative;
    margin-top: 10px;
    margin-bottom: 10px;
    background:  url(<%= asset_path "upload_btn_bg.jpg" %>) repeat-x;
    @include base-button-styled(50px, 100%);
    span {
      font-size: 16px;
      color: white;
      padding:0px 10px;
    }
}

.publish-upload-modal-file-requirement {
   font-size: 13px;
   font-weight: bold;
   padding: 30px 20px 10px !important;
   clear: both;
   background: url(<%= asset_path "upload-p-bg.png" %>) no-repeat ;
}


.publish-upload-modal-foot {
     text-align: center !important;
}

.publish-upload-modal-agreement {
   margin-bottom: 15px;
   a {
     @include base-a(#FF8185);
   }
}

.publish-upload-modal-submit-btn {
    @include base-button-styled(40px, auto);;
    font-weight: bold;
 }

.publish-upload-modal-direct-buy-btn {
    @include base-button-styled(40px, auto, lightn(black, 20%));
    font-weight: bold;
 }

// --------------------------------- publish upload modal ---------------------------- //

// ---------------------------------- custom make modal ------------------------------ //

.custom-make-modal-content {
	@extend .publish-upload-modal-content;
	width: 100%;
}

.custom-make-modal-header {
	@extend .publish-upload-modal-header;
}

.custom-make-modal-section-header {
	@extend .publish-upload-modal-section-header;
	&.sub {
		border-bottom: none !important;
		font-size: 18px;
	}
}

.custom-make-modal-body {
	@extend .publish-upload-modal-body;
}

.custom-make-modal-foot {
	@extend .publish-upload-modal-foot;
}

.custom-make-modal-request-btn {
    @include base-button-styled(40px, auto);;
	font-size: 16px !important;
	font-weight: bold;
}

.custom-make-modal-request-content {
	border: none !important;
	width: 100% !important;
	background-color: #eee !important;
}

.custom-make-modal-grid-item {
	/* width: auto; */
	/* height: auto; */
	background: #eeeeee;
	p {
		padding: 10px;
		color: black;
		width: 100%;
		&.price {
			font-size: 24px !important;
			font-weight: bold;
		}
	}
}

// ---------------------------------- custom make modal ------------------------------ //

// ------------------------------------- works page ---------------------------------- //

.publish-box {
	border: none;
	float:right;
	width: 860px;
	background-color: white;
	padding: 10px;
}

.publish-gathering-title {
	border: 1px solid #e6e6e6;
	border-bottom: 2px solid #B8A2F0;
	height: 33px;
	line-height: 33px;
	margin-bottom: 10px;
	h4 {
		color: #B8A2F0;
		padding-left:  16px;
		float: left;
	}
}

.publish-gathering-info {
	padding-left: 20px;
	border: 1px solid #e6e6e6;
	margin-top: -10px;
	min-height: 60px;
	#publish-prompt dl {
		display: block;
		-webkit-margin-before: 1em;
		-webkit-margin-after: 1em;
		-webkit-margin-start: 0px;
		-webkit-margin-end: 0px;
	}
	.publish-prompt dt {
		text-align: right;
		float:left;
		margin-right: 25px;
	}
	.publish-prompt dd {
		margin-right: 25px;
		float: left;
	}
}

.quick-op {
	margin-top: 20px;
	padding-left: 10px;
	border-bottom: 1px solid #e6e6e6;
}

.publish-list {
	/*border: 1px solid #e6e6e6;*/
	padding: 10px;
	.works-info {
		word-break: break-all;
		white-space: normal;
		width: 260px;
	}
	#loading {
		text-align: center;
	}
}

.thumbnail {
	img{
		max-width: 250px;
		max-height: 200px;	
	}
}
// ------------------------------------- works page ---------------------------------- //